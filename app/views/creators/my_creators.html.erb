<div class="container-creator-selection">+
  <div class="titler d-flex justify-content-center">
    <h1>Your followed <span class="green-text">creators</span></h1>
  </div>
  <div class="green-div w-100 h-20 mb-5 py-5 d-flex justify-content-center">
    <%= form_with url: musics_path, method: :get, class: "d-flex w-50 px-3" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a music"
      %>
      <%= submit_tag "Search", class: "btn-search" %>
    <% end %>
    <%= form_with url: my_creators_path, method: :get, class: "d-flex" do |f| %>
    <%= f.select :query, ["Music", "Movie", "Book"],
      class: "form-control",
      placeholder: "Filter"
    %>
    <%= submit_tag "Filter", class: "btn-search" %>
  <% end %>
  </div>
  <%= link_to "Follow someone new!", my_creators_new_path, class:"btn-ghost" %>

  <div class="cards" data-controller="test">
    <% @creators.each do |creator| %>
      <div class="card-trip">
        <%= link_to delete_creator_path(creator), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
        <i class="fa-solid fa-trash"></i>
        <img src= "<%= creator.poster_url %>", alt="Book poster">
        <div class="card-trip-infos">
          <strong><%= creator.content_type %></strong> <br>
          <%= creator.name %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
