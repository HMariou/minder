<h1>Here are all your creators🍿</h1>
<%= link_to "Add Creator", my_creators_new_path %>
<%= form_with url: my_creators_path, method: :get, class: "d-flex" do |f| %>
  <%= f.select :query, ["Music", "Movie", "Book"],
    class: "form-control",
    placeholder: "Sort"
  %>
  <%= submit_tag "Sort", class: "btn btn-primary" %>
<% end %>
<% @creators.each do |creator| %>
  <div class="card">
    <p class="card-title"><%= creator.creator.name %></p>
    <p class="card-text"><%= creator.creator.content_type %></p>
  </div>
<% end %>
