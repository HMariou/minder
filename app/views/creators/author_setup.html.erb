<div class="container-creator-selection mx-0">
  <div class="titler d-flex justify-content-center">
    <h1>Let's setup the <span class="green-text">authors</span> you'd like to follow! 🐱‍🏍</h1>
  </div>

  <div class="cards">
    <% @unfollowed_authors.each_with_index do |author, index| %>
      <div class="card-trip">
        <img src="<%= author.poster_url %>" alt="Album poster"/>
        <div class="card-trip-infos text-center">
          <%= author.name %>
          <%= form_with url:create_followed_creator_path, method: :post do |f| %>
          <%= f.text_field :creator_id, type: :hidden, value: author.id %>
            <%= f.submit '+', :class => 'btn-follow' %>
          <% end %>
          <% break if index == 7 %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class=" my-5">
  <div class="bis">
    <%= link_to "Next", director_setup_path, class:"btn-ghost mx-3 my-3" %>
  </div>
</div>
