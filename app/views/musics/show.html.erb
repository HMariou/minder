<% if @concert_music.nil? %>
  <div class="show-container">
    <div class="music-img">
      <%= image_tag @album_music.poster_url %>
    </div>
    <div class="card content-details">
      <p class="card-text"><%= @album_music.creator.name %></p>
      <p class="card-title"><%= @album_music.name %></p>
      <p class="card-text">Upcoming release on <%= @album_music.release_date %></p>
    </div>
  </div>
  <% concerts = Concert.where(creator: @album_music.creator) %>
  <% unless concerts.empty? %>
    <h1>Upcoming Concerts From the Artist</h1>
    <div class="concerts">
      <% concerts.each do |concert| %>
        <div class="content-details">
          <p class="card-text"><%= link_to concert.creator.name, music_path(concert) %></p>
          <p class="card-text"><%= concert.date %></p>
          <p class="card-title"><%= concert.name %></p>
          <p class="card-text"><%= concert.venue %></p>
          <p class="card-text"><%= concert.address %></p>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
<% if @album_music.nil? %>
  <div class="show-container">
    <div class="music-img">
      <%= image_tag @concert_music.poster_url %>
    </div>
    <div class="card content-details">
      <p class="card-text"><%= @concert_music.creator.name %></p>
      <p class="card-title"><%= @concert_music.name %></p>
      <p class="card-text">Upcoming release on <%= @concert_music.date %></p>
      <p class="card-text">Venue: <%= @concert_music.venue %></p>
      <p class="card-text">Address: <%= @concert_music.address %></p>
      <%= link_to "Book a Ticket", @concert_music.event_url %>
    </div>
  </div>
<% end %>
