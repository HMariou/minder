<% if @concert_music.nil? %>
<div class="content-details">
    <div class="show-container">
        <div class="music-img">
            <%= image_tag @album_music.poster_url %>
        </div>
        <div class="card-content-details">
            <p class="card-text"><%= @album_music.creator.name %></p>
            <h1 class="card-title">
                <%= @album_music.name %>
            </h1>
            <p class="card-text">Will be release on <%= @album_music.release_date %></p>
        </div>
    </div>
</div>

<% concerts = Concert.where(creator: @album_music.creator) %> <% unless concerts.empty? %>
<div class="titler">
    <h3>Donâ€™t miss out the upcoming <span class="green-text">concerts</span> by <span class="green-text"><%= @album_music.creator.name %></span></h3>
    <div class="text-center">
        <div class="cards">
            <div class="concerts">
                <div class="card-product">
                    <div class="card-product-infos d-flex align-items-center justify-content-between">
                  <i class="fa-solid fa-bookmark"></i>
                        <% concerts.each do |concert| %>
                        <div>
                        <h2>
                        <strong> <%= link_to concert.creator.name, music_path(concert) %></strong></h2>
                        <p class="black-text"><%= concert.date %></p>
                        <p class="black-text"><%= concert.venue %></p>
                        <p class="black-text"><%= concert.address %></p>

                        </div>
                    </div>
                    <div class="music-img">
                    <%= image_tag @album_music.poster_url %>
                   </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %> <% end %> <% if @album_music.nil? %>
<div class="show-container">
    <div class="music-img">
        <%= image_tag @concert_music.poster_url %>
    </div>
    <div class="card content-details">
        <p class="card-text"><%= @concert_music.creator.name %></p>
        <p class="card-title"><%= @concert_music.name %></p>
        <p class="card-text">Upcoming release on <%= @concert_music.date %></p>
        <p class="card-text">Venue: <%= @concert_music.venue %></p>
        <p class="card-text">Address: <%= @concert_music.address %></p>
        <%= link_to "Book a Ticket", @concert_music.event_url %>
    </div>
</div>
<% end %>
