<div class="contain">
  <div class="titler">
    <h1>Your Favorites</h1>
  </div>
  <div class="green-div w-100 h-20 mb-5 py-5 d-flex justify-content-center">
    <%= form_with url: user_favorites_path, method: :get, class: "d-flex" do |f| %>
      <%= f.select :query, ["Music", "Movie", "Book"],
        class: "form-control",
        placeholder: "Filter"
      %>
      <%= submit_tag "Filter", class: "btn-search" %>
    <% end %>
  </div>


  <div class="cards">
    <% @favorites.each do |favorite| %>
      <div class="card-trip m-3 py-3">
        <img src="<%= favorite.poster_url %>" alt="Books poster">
        <div class="card-trip-infos d-flex justify-content-center">
        <h2><%= favorite.name %></h2>
          <%= link_to unfavorite_path(favorite) do %>
            <i class="fa-solid fa-trash"></i>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
